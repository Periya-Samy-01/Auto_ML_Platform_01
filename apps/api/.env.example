# AutoML API Environment Configuration
# Copy this file to .env and update values

# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/automl_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated origins)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=automl-datasets-production

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Limits (MB)
MAX_UPLOAD_SIZE_MB_FREE=100
MAX_UPLOAD_SIZE_MB_PRO=1000
MAX_UPLOAD_SIZE_MB_ENTERPRISE=5000

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Free Tier Defaults
FREE_TIER_INITIAL_CREDITS=50
FREE_TIER_DATASET_LIMIT=10
FREE_TIER_WORKFLOW_LIMIT=5
FREE_TIER_STORAGE_LIMIT_MB=100
